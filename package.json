{
    "name": "@volverjs/monorepo-starter",
    "description": "Modern web app template with monorepo structure.",
    "version": "0.0.0",
    "private": true,
    "packageManager": "pnpm@10.9.0",
    "type": "module",
    "scripts": {
        "dev": "nx run-many --targets=dev --parallel=10",
        "build-staging": "nx run-many --targets=build-staging --parallel=10",
        "build": "nx run-many --targets=build --parallel=10",
        "lint": "eslint",
        "lint:fix": "eslint --fix .",
        "graph": "nx graph",
        "frontend:dev": "nx run frontend:dev",
        "frontend:build-staging": "nx run frontend:build-staging",
        "frontend:build-production": "nx run frontend:build",
        "backend:dev": "nx run backend:dev",
        "backend:build": "nx run backend:build",
        "db:generate": "nx run database:generate",
        "db:migrate": "nx run database:migrate",
        "db:migrate-staging": "nx run database:migrate-staging",
        "db:migrate-production": "nx run database:migrate-production"
    },
    "dependencies": {
        "@volverjs/data": "^2.0.0",
        "@volverjs/form-vue": "1.0.0-beta.37",
        "@volverjs/query-vue": "^2.0.0",
        "@volverjs/ui-vue": "0.0.10-beta.68",
        "@vueuse/core": "^13.1.0",
        "@vueuse/router": "^13.1.0",
        "better-auth": "1.2.4",
        "drizzle-orm": "^0.42.0",
        "handlebars": "^4.7.8",
        "json-schema-to-ts": "^3.1.1",
        "nodemailer": "^6.10.1",
        "pinia": "^3.0.2",
        "postgres": "^3.4.5",
        "type-fest": "^4.40.0",
        "vue": "^3.5.13",
        "vue-i18n": "^11.1.3",
        "vue-router": "^4.5.0",
        "zod": "^3.24.3"
    },
    "devDependencies": {
        "@eslint/js": "^9.25.1",
        "@intlify/eslint-plugin-vue-i18n": "4.0.1",
        "@intlify/unplugin-vue-i18n": "^6.0.8",
        "@nx/js": "20.8.0",
        "@nx/vite": "20.8.0",
        "@types/node": "^22.14.1",
        "@types/nodemailer": "^6.4.17",
        "@typescript-eslint/eslint-plugin": "^8.31.0",
        "@vue/eslint-config-typescript": "^14.5.0",
        "drizzle-kit": "^0.31.0",
        "eslint": "^9.25.1",
        "eslint-config-prettier": "^10.1.2",
        "eslint-plugin-prettier": "^5.2.6",
        "eslint-plugin-vue": "^10.0.0",
        "nx": "20.8.0",
        "prettier": "^3.5.3",
        "sass": "^1.87.0",
        "stylelint": "^16.18.0",
        "stylelint-config-recommended-vue": "^1.6.0",
        "stylelint-config-standard-scss": "^14.0.0",
        "typescript": "^5.8.3",
        "unplugin-auto-import": "^19.1.2",
        "vite": "^6.3.2",
        "vite-plugin-eslint": "^1.8.1"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "@swc/core",
            "core-js-pure",
            "esbuild",
            "nx",
            "protobufjs",
            "sharp",
            "vue-demi"
        ]
    }
}
