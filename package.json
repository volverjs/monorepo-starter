{
    "name": "@volverjs/monorepo-starter",
    "description": "Modern web app template with monorepo structure.",
    "version": "0.0.0",
    "private": true,
    "packageManager": "pnpm@10.18.1",
    "type": "module",
    "scripts": {
        "dev": "nx run-many --targets=dev --parallel=10",
        "build-staging": "nx run-many --targets=build-staging --parallel=10",
        "build": "nx run-many --targets=build --parallel=10",
        "lint": "eslint",
        "lint:fix": "eslint --fix .",
        "graph": "nx graph",
        "frontend:dev": "nx run frontend:dev",
        "frontend:build-staging": "nx run frontend:build-staging",
        "frontend:build-production": "nx run frontend:build",
        "backend:dev": "nx run backend:dev",
        "backend:build": "nx run backend:build",
        "db:generate": "nx run database:generate",
        "db:migrate": "nx run database:migrate",
        "db:migrate-staging": "nx run database:migrate-staging",
        "db:migrate-production": "nx run database:migrate-production"
    },
    "dependencies": {
        "@volverjs/data": "^2.0.4",
        "@volverjs/form-vue": "^1.1.1",
        "@volverjs/query-vue": "^2.0.1",
        "@volverjs/ui-vue": "^0.0.11",
        "@volverjs/zod-vue-i18n": "^0.0.7",
        "@vueuse/core": "^13.9.0",
        "@vueuse/router": "^13.9.0",
        "better-auth": "^1.4.4",
        "drizzle-orm": "^0.44.6",
        "handlebars": "^4.7.8",
        "json-schema-to-ts": "^3.1.1",
        "nodemailer": "^7.0.9",
        "pinia": "^3.0.3",
        "postgres": "^3.4.7",
        "type-fest": "^5.0.1",
        "vue": "^3.5.22",
        "vue-i18n": "^11.1.12",
        "vue-router": "^4.5.1",
        "zod": "^4.1.12"
    },
    "devDependencies": {
        "@eslint/js": "^9.37.0",
        "@intlify/eslint-plugin-vue-i18n": "4.1.0",
        "@intlify/unplugin-vue-i18n": "^6.0.8",
        "@nabla/vite-plugin-eslint": "^2.0.6",
        "@nx/js": "21.6.4",
        "@nx/vite": "21.6.4",
        "@types/node": "^24.7.0",
        "@types/nodemailer": "^7.0.2",
        "@typescript-eslint/eslint-plugin": "^8.46.0",
        "@vue/eslint-config-typescript": "^14.6.0",
        "drizzle-kit": "^0.31.5",
        "eslint": "^9.37.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-vue": "^10.5.0",
        "nx": "21.6.4",
        "prettier": "^3.6.2",
        "sass": "^1.93.2",
        "stylelint": "^16.25.0",
        "stylelint-config-recommended-vue": "^1.6.1",
        "stylelint-config-standard-scss": "^16.0.0",
        "typescript": "^5.9.3",
        "unplugin-auto-import": "^20.2.0",
        "vite": "^7.1.9",
        "vite-plugin-mkcert": "^1.17.9"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "@parcel/watcher",
            "@swc/core",
            "core-js-pure",
            "esbuild",
            "nx",
            "protobufjs",
            "sharp",
            "vue-demi"
        ]
    }
}
